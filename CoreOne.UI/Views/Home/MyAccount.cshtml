@model CoreOne.DOMAIN.Models.UserCreation
@{
    string genderIcon = Model.GenderName?.ToLower() switch
    {
        "male" => "mdi mdi-gender-male text-primary",
        "female" => "mdi mdi-gender-female text-danger",
        _ => "mdi mdi-gender-transgender text-purple"
    };

    string statusBadge = Model.ActiveFlag == 1
        ? "<span class='badge bg-success rounded-pill px-3 py-1'>Active</span>"
        : "<span class='badge bg-danger rounded-pill px-3 py-1'>Inactive</span>";

    string profileImage = Url.Content("~/" + Model.PhotoPath?.Replace("wwwroot\\", "").Replace("\\", "/"));
}

<style>
    /* =============== 🌈 PROFILE PAGE DESIGN ================= */

    /* --- Wrapper --- */
    .profile-wrapper {
        max-width: 950px;
        margin: 20px auto;
        padding: 0 1rem;
    }

    /* --- Banner Header --- */
    .profile-header {
        height: 180px;
        border-radius: 20px;
        background: linear-gradient(135deg, #4f8bff, #73b9ff, #96e0ff);
        position: relative;
        overflow: hidden;
        box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
    }

        /* subtle animation */
        .profile-header::after {
            content: "";
            position: absolute;
            width: 120%;
            height: 200%;
            top: -40%;
            left: -10%;
            background: radial-gradient(circle at center, rgba(255,255,255,0.25) 0%, transparent 70%);
            transform: rotate(20deg);
        }

    /* --- Profile Card --- */
    .profile-card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 20px;
        padding: 2.5rem 2rem;
        margin-top: -100px;
        box-shadow: 0 6px 30px rgba(0,0,0,0.15);
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
        align-items: flex-start;
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
    }

        /* --- Left Section: Profile Info --- */
        .profile-card .left {
            flex: 1 1 260px;
            max-width: 300px;
            text-align: center;
        }

    .profile-image {
        width: 130px;
        height: 130px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid #fff;
        box-shadow: 0 4px 14px rgba(0, 0, 0, 0.2);
        margin-bottom: 12px;
    }

    .profile-card h4 {
        font-size: 1.4rem;
        color: #1a2942;
        margin-bottom: 4px;
    }

    .profile-card p {
        font-size: 0.9rem;
        color: #6b7b93;
    }

    /* --- Right Section: Details --- */
    .profile-card .right {
        flex: 2 1 400px;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .detail-card {
        background: linear-gradient(145deg, #f8faff, #eef3ff);
        border: 1px solid #dfe4f1;
        border-radius: 14px;
        padding: 14px 18px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .detail-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        }

        .detail-card label {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            color: #324974;
        }

        .detail-card span {
            font-weight: 600;
            color: #1e2746;
        }

    /* --- Responsive Behavior --- */
    @@media (max-width: 992px) {
        .profile-card

    {
        flex-direction: column;
        text-align: center;
        align-items: center;
        padding: 2rem 1.5rem;
    }

    .profile-card .right {
        width: 100%;
        align-items: stretch;
    }

    }

    @@media (max-width: 576px) {
        .profile-header

    {
        height: 120px;
    }

    .profile-image {
        width: 100px;
        height: 100px;
    }

    .profile-card {
        margin-top: -70px;
        padding: 1.5rem 1rem;
    }

    .detail-card {
        flex-direction: column;
        align-items: flex-start;
        gap: 4px;
    }

        .detail-card span {
            font-size: 0.9rem;
        }

    }
</style>

<!-- =============== 🌈 PROFILE PAGE HTML ================= -->
<div class="profile-wrapper">
    <div class="profile-header"></div>

    <div class="profile-card">
        <!-- Left Section -->
        <div class="left">
            <img src="@profileImage"
                 class="profile-image"
                 onerror="this.src='/images/default-profile.png';" />
            <h4>@Model.UserName</h4>
            @Html.Raw(statusBadge)
            <p class="mt-2"><i class="mdi mdi-shield-account"></i> @Model.RoleName</p>
        </div>

        <!-- Right Section -->
        <div class="right">
            <div class="detail-card">
                <label><i class="mdi mdi-email"></i> Email</label>
                <span>@Model.Email</span>
            </div>
            <div class="detail-card">
                <label><i class="mdi mdi-phone"></i> Phone</label>
                <span>@Model.PhoneNumber</span>
            </div>
            <div class="detail-card">
                <label><i class="@genderIcon"></i> Gender</label>
                <span>@Model.GenderName</span>
            </div>
            <div class="detail-card">
                <label><i class="mdi mdi-calendar"></i> Created On</label>
                <span>@Model.CreatedDate?.ToString("dd-MMM-yyyy")</span>
            </div>
        </div>
    </div>
</div>
