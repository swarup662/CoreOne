@using CoreOne.DOMAIN.Models
@using CoreOne.UI.Controllers
@using CoreOne.UI.Helper
@inject MenuLayoutController MenuController
@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = null;

    var userId = TokenHelper.GetUserIdFromToken(HttpContextAccessor.HttpContext);
    bool TokenExpiry = TokenHelper.IsTokenValid(HttpContextAccessor.HttpContext);
    var menuItems = new List<MenuItem>();
    User user = new User();

    if (!userId.HasValue || !TokenExpiry)
    {
        TempData["message"] = "Please Login again";
        TempData["messagetype"] = "error";
        HttpContextAccessor.HttpContext.Response.Redirect("/Account/Login");
    }
    else
    {
        var TokenUser = TokenHelper.UserFromToken(Context);
        if (TokenUser is not null) user = TokenUser;

        menuItems = await MenuController.UserMenu(Context);

        if (menuItems.Count == 0)
        {
            TokenHelper.RemoveToken(Context);
            HttpContextAccessor.HttpContext.Response.Redirect("/Account/Login");
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Change Password | CoreOne</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/app.min.css" rel="stylesheet" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" />

    <style>
        /* Background */
        body.authentication-bg-pattern {
            background-image: url('@Url.Content("~/assets/images/pass2.jpg")');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
        }

        /* Compact Metallic Card */
        .bg-pattern {
            background: linear-gradient(145deg, #c9c7c4a3, #ffe5b7);
            border: 1px solid #ffefd1;
            border-radius: 10px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.25), inset 0 1px 3px rgba(255,255,255,0.7), inset 0 -1px 3px #ffffff;
            padding: 10px !important; /* tighter */
            backdrop-filter: blur(9px);
        }

        /* Title & Subtle text */
        .text-dark {
            font-size: 1.1rem;
            margin-bottom: 4px !important;
        }

        .text-muted {
            font-size: 0.85rem;
            margin-bottom: 6px !important;
            color: #915d00 !important;
        }

        /* Compact Inputs */
        .form-control {
            background: linear-gradient(145deg, #ffffff, #e5e7ec);
            border: 1px solid #9aa6b3;
            height: 34px;
            font-size: 0.85rem;
            padding: 4px 10px;
            border-radius: 7px;
        }

            .form-control:focus {
                border-color: #5d9cff;
                box-shadow: 0 0 6px #5d9cff55;
            }

        .form-label {
            font-size: 0.85rem;
            margin-bottom: 2px;
            color: #26303c;
            font-weight: 600;
        }

        /* Eye Icon */
        .toggle-password {
            position: absolute;
            right: 8px;
            top: 32px;
            cursor: pointer;
            color: #5a6a7c;
            font-size: 16px;
        }

        /* Compact Button */
        #btnChange {
            background: linear-gradient(135deg, #4b81d1 0%, #1d4f97 100%);
            border: 1px solid #7ea6df;
            padding: 6px 0;
            font-size: 0.9rem;
            font-weight: 700;
            border-radius: 8px;
            color: white;
            transition: .25s ease;
        }

            #btnChange:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 14px rgba(0,0,0,0.35);
            }

        /* Preloader */
        #preloader {
            position: fixed;
            inset: 0;
            background: rgba(15,20,32,0.92);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2000;
        }

            #preloader.hidden {
                opacity: 0;
                visibility: hidden;
                transition: .6s;
            }

        .loader .spin {
            font-size: 42px;
            color: #6fa4ff;
            animation: spin 2s linear infinite;
        }

        @@keyframes spin {
            100%

        {
            transform: rotate(360deg);
        }

        }

        /* Back Link */
        .back-card {
            padding: 4px !important;
        }

            .back-card p {
                margin: 4px 0 !important;
                font-size: 0.85rem !important;
            }
    </style>

</head>

<body class="authentication-bg-pattern">

    <!-- Preloader -->
    <div id="preloader">
        <div class="loader">
            <i class="fas fa-globe spin"></i>
            <div class="loading-text">Loading...</div>
        </div>
    </div>

    <div class="account-pages mt-4 mb-4">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-md-6 col-lg-5 col-xl-4">

                    <!-- Compact Card -->
                    <div class="card bg-pattern">
                        <div class="card-body p-2">

                            <div class="text-center w-75 m-auto mb-1">
                                <h4 class="text-dark mt-1">Hi, @user.UserName</h4>
                                <p class="text-muted">Update your password.</p>
                            </div>

                            <div class="mb-2 position-relative">
                                <label class="form-label">Current Password</label>
                                <input id="currentPwd" type="password" class="form-control" />
                                <i class="bi bi-eye-slash toggle-password" data-target="#currentPwd"></i>
                            </div>

                            <div class="mb-2 position-relative">
                                <label class="form-label">New Password</label>
                                <input id="newPwd" type="password" class="form-control" />
                                <i class="bi bi-eye-slash toggle-password" data-target="#newPwd"></i>
                            </div>

                            <div class="mb-2 position-relative">
                                <label class="form-label">Confirm Password</label>
                                <input id="confirmPwd" type="password" class="form-control" />
                                <i class="bi bi-eye-slash toggle-password" data-target="#confirmPwd"></i>
                            </div>

                            <div class="text-center d-grid mt-2">
                                <button id="btnChange" class="btn">Change Password</button>
                            </div>

                        </div>
                    </div>

                    <!-- Back Link Compact -->
                    <div class="card bg-pattern mt-2">
                        <div class="card-body text-center" style="padding: 0px;">
                            <p class="mb-1">
                                Back to <a href="/Account/Login" class="text-primary"><b>Dashboard</b></a>
                            </p>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>


    <!-- JS -->
    <script src="~/assets/js/vendor.min.js"></script>
    <script src="~/assets/libs/sweetalert2/sweetalert2.all.min.js"></script>

    <script>
        /* Toggle password */
        $(document).on("click", ".toggle-password", function () {
            const input = $($(this).data("target"));
            const icon = $(this);

            if (input.attr("type") === "password") {
                input.attr("type", "text");
                icon.removeClass("bi-eye-slash").addClass("bi-eye");
            } else {
                input.attr("type", "password");
                icon.removeClass("bi-eye").addClass("bi-eye-slash");
            }
        });

        /* Preloader */
        window.addEventListener('load', () => {
            const p = document.getElementById('preloader');
            p.classList.add('hidden');
            setTimeout(() => p.remove(), 600);
        });

        /* Change Password */
        $("#btnChange").click(function () {
            const currentPwd = $("#currentPwd").val().trim();
            const newPwd = $("#newPwd").val().trim();
            const confirmPwd = $("#confirmPwd").val().trim();

            if (!currentPwd || !newPwd || !confirmPwd) {
                Swal.fire("Missing Fields", "Please fill in all fields.", "warning");
                return;
            }

            if (newPwd !== confirmPwd) {
                Swal.fire("Mismatch", "New passwords do not match!", "error");
                return;
            }

            $.ajax({
                url: '/Account/ChangePassword',
                method: 'POST',
                data: JSON.stringify({ CurrentPassword: currentPwd, NewPassword: newPwd }),
                contentType: 'application/json',
                success: function (r) {
                    if (r.success) {
                        Swal.fire({
                            icon: "success",
                            title: "Password Changed",
                            showConfirmButton: false,
                            timer: 1500
                        }).then(() => {
                            $.post('/Account/Logout', () => {
                                window.location.href = "/Account/Login";
                            });
                        });
                    } else {
                        Swal.fire("Error", r.message || "Failed.", "error");
                    }
                },
                error: () => Swal.fire("Error", "Something went wrong.", "error")
            });
        });
    </script>

</body>
</html>
