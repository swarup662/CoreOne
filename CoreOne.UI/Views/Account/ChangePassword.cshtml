@using CoreOne.DOMAIN.Models
@using CoreOne.UI.Controllers
@using CoreOne.UI.Helper
@inject MenuLayoutController MenuController
@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = null;

    var userId = TokenHelper.GetUserIdFromToken(HttpContextAccessor.HttpContext);
    bool TokenExpiry = TokenHelper.IsTokenValid(HttpContextAccessor.HttpContext);
    var menuItems = new List<MenuItem>();
    User user = new User();

    if (!userId.HasValue || !TokenExpiry)
    {
        TempData["message"] = "Please Login again";
        TempData["messagetype"] = "error";
        HttpContextAccessor.HttpContext.Response.Redirect("/Account/Login");
    }
    else
    {
        var TokenUser = TokenHelper.UserFromToken(Context);
        if (TokenUser is not null) user = TokenUser;

        menuItems = await MenuController.UserMenu(Context);

        if (menuItems.Count == 0)
        {
            TokenHelper.RemoveToken(Context);
            HttpContextAccessor.HttpContext.Response.Redirect("/Account/Login");
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Change Password | CoreOne</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS FILES -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/app.min.css" rel="stylesheet" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" />

    <style>
        /* ============================================================
                   🔵 MEDIUM DARK METALLIC BLUE BACKGROUND
                ============================================================ */
        body.authentication-bg-pattern {
            background: radial-gradient(circle at 20% 20%, rgba(150,170,200,0.18), rgba(0,0,0,0) 55%), radial-gradient(circle at 80% 80%, rgba(120,150,190,0.18), rgba(0,0,0,0) 60%), linear-gradient(130deg, #2b3440 0%, #374250 35%, #455267 60%, #2c3542 100%), repeating-linear-gradient( 90deg, rgba(255,255,255,0.05) 0px, rgba(255,255,255,0.05) 2px, rgba(0,0,0,0.12) 2px, rgba(0,0,0,0.12) 5px );
            background-size: cover;
            background-attachment: fixed;
            color: #dbe2ec;
        }

        /* ============================================================
                   🔵 Metallic Card — Medium Dark Steel
                ============================================================ */
        .bg-pattern {
            background: linear-gradient(145deg, #d5dbe3, #afb9c5);
            border: 1px solid #8c9aab;
            border-radius: 12px;
            box-shadow: 0 10px 26px rgba(0,0,0,0.35), inset 0 2px 4px rgba(255,255,255,0.7), inset 0 -2px 4px rgba(0,0,0,0.35);
        }

        /* ============================================================
                   🔵 Input Fields — Metallic Style
                ============================================================ */
        .form-control {
            background: linear-gradient(145deg, #ffffff, #e5e7ec);
            border: 1px solid #9aa6b3;
            height: 38px;
            border-radius: 8px;
            color: #1d2733;
        }

            .form-control:focus {
                border-color: #5d9cff;
                box-shadow: 0 0 8px #5d9cff55;
            }

        .form-label {
            color: #26303c;
            font-weight: 600;
        }

        /* ============================================================
                   🔵 Password Toggle Eye Icon
                ============================================================ */
        .toggle-password {
            position: absolute;
            right: 12px;
            top: 38px;
            cursor: pointer;
            color: #5a6a7c;
            font-size: 18px;
        }

            .toggle-password:hover {
                color: #2b7bff;
            }

        /* ============================================================
                   🔵 Button — Steel Blue Glossy
                ============================================================ */
        #btnChange {
            background: linear-gradient(135deg, #4b81d1 0%, #1d4f97 100%);
            border: 1px solid #7ea6df;
            padding: 8px 0;
            font-weight: 700;
            border-radius: 10px;
            color: white;
            transition: .25s ease;
            letter-spacing: .5px;
        }

            #btnChange:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.35);
            }

        /* ============================================================
                   🔵 Preloader — Dark Metallic Blue
                ============================================================ */
        #preloader {
            position: fixed;
            inset: 0;
            background: rgba(15,20,32,0.92);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2000;
        }

            #preloader.hidden {
                opacity: 0;
                visibility: hidden;
                transition: .6s;
            }

        .loader .spin {
            font-size: 48px;
            color: #6fa4ff;
            animation: spin 2s linear infinite;
        }

        @@keyframes spin {
            100% {
                transform: rotate(360deg);
            }
        }

        .text-dark {
            color: #1b2734 !important;
        }

        .text-muted {
            color: #6c757d !important;
        }

        a.text-primary {
            color: #6fa4ff !important;
        }
    </style>

</head>

<body class="authentication-bg-pattern">

    <!-- Preloader -->
    <div id="preloader">
        <div class="loader">
            <i class="fas fa-globe spin"></i>
            <div class="loading-text">Loading...</div>
        </div>
    </div>

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-md-8 col-lg-6 col-xl-4">

                    <!-- MAIN METALLIC CARD -->
                    <div class="card bg-pattern">
                        <div class="card-body p-3">

                            <div class="text-center w-75 m-auto mb-2">
                                <h4 class="text-dark mt-2">Hi, @user.UserName</h4>
                                <p class="text-muted mb-2">Update your password to secure your account.</p>
                            </div>

                            <div class="mb-2 position-relative">
                                <label class="form-label">Current Password</label>
                                <input id="currentPwd" type="password" class="form-control" placeholder="Current password" />
                                <i class="bi bi-eye-slash toggle-password" data-target="#currentPwd"></i>
                            </div>

                            <div class="mb-2 position-relative">
                                <label class="form-label">New Password</label>
                                <input id="newPwd" type="password" class="form-control" placeholder="New password" />
                                <i class="bi bi-eye-slash toggle-password" data-target="#newPwd"></i>
                            </div>

                            <div class="mb-2 position-relative">
                                <label class="form-label">Confirm Password</label>
                                <input id="confirmPwd" type="password" class="form-control" placeholder="Confirm password" />
                                <i class="bi bi-eye-slash toggle-password" data-target="#confirmPwd"></i>
                            </div>

                            <div class="text-center d-grid mt-3">
                                <button id="btnChange" class="btn">Change Password</button>
                            </div>

                        </div>
                    </div>

                    <!-- BACK LINK -->
                    <div class="card bg-pattern mt-2">
                        <div class="card-body p-1 text-center">
                            <p class="text-dark mb-1">
                                Back to <a href="/Account/Login" class="text-primary"><b>Dashboard</b></a>
                            </p>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>


    <!-- JS FILES -->
    <script src="~/assets/js/vendor.min.js"></script>
    <script src="~/assets/libs/sweetalert2/sweetalert2.all.min.js"></script>

    <script>
        /* Password toggle */
        $(document).on("click", ".toggle-password", function () {
            const input = $($(this).data("target"));
            const icon = $(this);

            if (input.attr("type") === "password") {
                input.attr("type", "text");
                icon.removeClass("bi-eye-slash").addClass("bi-eye");
            } else {
                input.attr("type", "password");
                icon.removeClass("bi-eye").addClass("bi-eye-slash");
            }
        });

        /* Preloader hide */
        window.addEventListener('load', () => {
            const p = document.getElementById('preloader');
            p.classList.add('hidden');
            setTimeout(() => p.remove(), 600);
        });

        /* Submit Password Change */
        $("#btnChange").click(function () {
            const currentPwd = $("#currentPwd").val().trim();
            const newPwd = $("#newPwd").val().trim();
            const confirmPwd = $("#confirmPwd").val().trim();

            if (!currentPwd || !newPwd || !confirmPwd) {
                Swal.fire("Missing Fields", "Please fill in all fields.", "warning");
                return;
            }

            if (newPwd !== confirmPwd) {
                Swal.fire("Mismatch", "New passwords do not match!", "error");
                return;
            }

            $.ajax({
                url: '/Account/ChangePassword',
                method: 'POST',
                data: JSON.stringify({ CurrentPassword: currentPwd, NewPassword: newPwd }),
                contentType: 'application/json',
                success: function (r) {
                    if (r.success) {
                        Swal.fire({
                            icon: "success",
                            title: "Password Changed",
                            showConfirmButton: false,
                            timer: 1600
                        }).then(() => {
                            $.post('/Account/Logout', () => {
                                window.location.href = "/Account/Login";
                            });
                        });
                    } else {
                        Swal.fire("Error", r.message || "Failed to change password.", "error");
                    }
                },
                error: () => Swal.fire("Error", "Something went wrong.", "error")
            });
        });
    </script>

</body>
</html>
