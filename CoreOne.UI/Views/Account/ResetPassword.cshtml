@{
    Layout = "_LoginLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Reset Password | CoreOne</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS IMPORTS -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/app.min.css" rel="stylesheet" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" />

    <!-- jQuery -->
    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <style>
        body.authentication-bg-pattern {
            background-image: url('@Url.Content("~/assets/images/pass3.jpg")');
            background-attachment: fixed;
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
    <style>
     
        /* ======================================================
           🔵 Metallic Card – Compact Steel Design
        ====================================================== */
        .bg-pattern {
            background: linear-gradient(145deg, #c9c7c4a3, #ffe5b7);
            border: 1px solid #ffefd1;
            border-radius: 12px;
            box-shadow: 0 10px 26px rgba(0, 0, 0, 0.35), inset 0 2px 4px rgba(255, 255, 255, 0.7), inset 0 -2px 4px #ffffff;
         
            backdrop-filter: blur(10px);
        }

        /* Compact card padding */
        .card-body {
            padding: 11px !important;
        }

        /* ======================================================
           🔵 Metallic Inputs
        ====================================================== */
        .form-control {
            background: linear-gradient(145deg, #ffffff, #e5e7ec);
            border: 1px solid #9aa6b3;
            height: 38px;
            border-radius: 8px;
            color: #1d2733;
            font-size: 14px;
        }

            .form-control:focus {
                border-color: #5d9cff;
                box-shadow: 0 0 8px #5d9cff55;
            }

        .form-label {
            font-weight: 600;
            font-size: 14px;
            color: #1f2a33;
        }

        /* ======================================================
           🔵 Toggle Password Icon
        ====================================================== */
        .toggle-password {
            position: absolute;
            right: 12px;
            top: 38px;
            cursor: pointer;
            color: #6c757d;
            font-size: 18px;
        }

            .toggle-password:hover {
                color: #1d4f91;
            }

        /* ======================================================
           🔵 Metallic Blue Button
        ====================================================== */
        #btnReset {
            background: linear-gradient(135deg, #4b81d1, #1d4f97);
            border: 1px solid #7ea6df;
            font-weight: 700;
            color: white;
            border-radius: 8px;
            padding: 8px 0;
            transition: 0.25s ease;
            font-size: 14px;
        }

            #btnReset:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 18px rgba(0,0,0,0.3);
            }

        /* ======================================================
           🔵 Preloader Metal Blue
        ====================================================== */
        #preloader {
            position: fixed;
            inset: 0;
            background: rgba(15,20,32,0.92);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2000;
        }

            #preloader.hidden {
                opacity: 0;
                visibility: hidden;
                transition: .6s;
            }

        .loader .spin {
            font-size: 48px;
            color: #6fa4ff;
            animation: spin 2s linear infinite;
        }
        @@keyframes spin {
            100%

        {
            transform: rotate(360deg);
        }

        }

        .text-muted {
            color: #6c757d !important ;
        }

    </style>
</head>


<body class="authentication-bg-pattern">

    <!-- PRELOADER -->
    <div id="preloader">
        <div class="loader">
            <i class="fas fa-globe spin"></i>
            <div class="loading-text">Loading...</div>
        </div>
    </div>


    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">

                <div class="col-md-8 col-lg-6 col-xl-4">

                    <!-- METALLIC CARD -->
                    <div class="card bg-pattern">
                        <div class="card-body">

                            <div class="text-center mb-3">
                                <h4 class="fw-bold text-dark" style="color:#16202c!important;">Reset Password</h4>
                                <p class="text-muted">Enter your new password below</p>
                            </div>

                            <div class="mb-2 position-relative">
                                <label class="form-label">New Password</label>
                                <input id="newPwd" type="password" class="form-control" placeholder="New password" />
                                <i class="bi bi-eye-slash toggle-password" data-target="#newPwd"></i>
                            </div>

                            <div class="text-center d-grid mt-3">
                                <button id="btnReset" class="btn">Reset Password</button>
                                <div id="timer" class="mt-2 text-danger"></div>
                            </div>

                        </div>
                    </div>

                    <!-- FOOTER CARD -->
                    <div class="card bg-pattern mt-2">
                        <div class="card-body p-2 text-center">
                            <p class="text-dark mb-1">
                                Back to
                                <a href="/Account/Login" class="text-primary"><b>Log In</b></a>
                            </p>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>


    <!-- SCRIPTS -->
    <script>
        // Preloader hide
        window.addEventListener('load', () => {
            const p = document.getElementById('preloader');
            p.classList.add('hidden');
            setTimeout(() => p.remove(), 600);
        });

        // Toggle password visibility
        document.addEventListener("click", function (e) {
            const icon = e.target.closest(".toggle-password");
            if (!icon) return;

            const input = document.querySelector(icon.dataset.target);
            if (!input) return;

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            } else {
                input.type = "password";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            }
        });
    </script>

    <script>
        // PASSWORD RESET TOKEN HANDLING
        const token = new URLSearchParams(window.location.search).get('token');
        let userId = 0;

        $.ajax({
            url: '/Account/ValidateResetToken?token=' + token,
            method: 'GET',
            success: function (r) {

                if (!r.success) {
                    $("#timer").text(r.message || "Invalid or expired token");
                    $("#btnReset").prop('disabled', true);
                    return;
                }

                userId = r.userID;
                const expiry = new Date(r.expiresAt);

                // countdown
                const timer = setInterval(() => {
                    const now = new Date();
                    const remaining = Math.floor((expiry - now) / 1000);

                    if (remaining <= 0) {
                        $("#timer").text("Link expired");
                        $("#btnReset").prop('disabled', true);
                        clearInterval(timer);
                        return;
                    }

                    const m = Math.floor(remaining / 60);
                    const s = remaining % 60;
                    $("#timer").text(`Link expires in ${m}:${s.toString().padStart(2,'0')}`);

                }, 1000);

                $("#btnReset").click(function () {
                    const newPwd = $("#newPwd").val().trim();
                    if (newPwd === "") return alert("Please enter password.");

                    $.ajax({
                        url: '/Account/ResetPassword',
                        method: 'POST',
                        data: JSON.stringify({ userID: userId, newPassword: newPwd, token }),
                        contentType: 'application/json',
                        success: function (resp) {
                            if (resp.success) {
                                       Swal.fire({
                                    icon: 'success',
                                    title: 'Success',
                                    text: resp.message || "Password reset successful.",
                                    timer: 2000,
                                    showConfirmButton: false
                                });

                                setTimeout(() => {
                                    window.location.href = "/Account/Login";
                                }, 2000);
                                                    } else {
                                        Swal.fire({
                                            icon: 'error',
                                            title: 'Error',
                                            text: resp.message || "Password reset failed."
                                        });

                            }
                        },
                        error: function () {
                            alert("Something went wrong.");
                        }
                    });
                });
            }
        });
    </script>

</body>
</html>
