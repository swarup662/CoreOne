@model List<CoreOne.DOMAIN.Models.UserAccessViewModel>

@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Select Company & Application";
    var userId = TempData["userId"];
    TempData.Keep("userId");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <style>
        body {
            font-family: "Segoe UI", sans-serif;
            min-height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, #e0e7ff 0%, #f0f4ff 40%, #dbeafe 100%);
            color: #333;
            overflow-x: hidden;
        }

        /* === Preloader === */
        #preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(13, 20, 35, 0.95);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2000;
            flex-direction: column;
        }

        .loader .spin {
            font-size: 48px;
            color: #89a4cd;
            animation: spin 2s linear infinite;
        }

        .loading-text {
            color: #ffffffcc;
            margin-top: 10px;
            font-weight: 500;
        }

        @@keyframes spin {
            100% {
                transform: rotate(360deg);
            }
        }

        /* === Custom Company Dropdown === */
        .company-select-wrapper {
            position: relative;
            width: 505px;
            margin: 15vh auto 0;
            text-align: left;
            border-radius: 16px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
        }

        .company-select-box {
            background: #fff;
            border-radius: 14px 14px 0 0;
            box-shadow: 0 4px 18px rgba(0, 0, 0, 0.05);
            padding: 16px 20px;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-weight: 500;
            font-size: 1.05rem;
            color: #1f2937;
            border: 1px solid rgba(0, 0, 0, 0.08);
            transition: all 0.25s ease;
        }

        .company-dropdown {
            list-style: none;
            margin: 0;
            padding: 10px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.05);
            position: relative;
            width: 100%;
            z-index: 1;
            max-height: 260px;
            overflow-y: auto;
            border: 1px solid rgba(0, 0, 0, 0.08);
            display: none;
        }

        .company-dropdown li {
            display: flex;
            align-items: center;
            gap: 12px;
            background: #ffffff;
            margin-bottom: 8px;
            border-radius: 10px;
            padding: 12px 16px;
            font-weight: 500;
            cursor: pointer;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            transition: all 0.25s ease;
            border-left: 4px solid transparent;
            word-break: break-word;
        }

        .company-dropdown li:hover {
            transform: translateY(-2px);
            background: #e8f2ff;
            border-left: 4px solid #2676ab;
            color: #2676ab;
        }

        .company-dropdown li.active {
            background: #d6e4ff;
            border-left: 4px solid #2676ab;
            color: #2676ab;
            font-weight: 600;
        }

        .dropdown-footer {
            position: relative;
            background: linear-gradient(145deg, #fff, #f5f7fa);
            border-top: 1px solid rgba(0, 0, 0, 0.05);
            border-radius: 0 0 14px 14px;
            box-shadow: inset 0 4px 8px rgba(0, 0, 0, 0.03);
            text-align: center;
            padding: 12px 0;
            z-index: 2;
        }

        .logout-btn {
            background: none;
            border: none;
            font-size: 1rem;
            font-weight: 500;
            color: #d33;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.25s ease;
        }

        .logout-btn:hover {
            color: #fff;
            background: #d33;
            padding: 8px 16px;
            border-radius: 10px;
        }

        .search-card {
            background: linear-gradient(160deg, rgba(255, 255, 255, 0.96), rgba(237, 242, 252, 0.95));
            border-radius: 20px;
            padding: 15px 20px;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.12);
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 650px;
            width: 90%;
            margin: 30px auto;
            position: sticky;
            top: 20px;
            z-index: 50;
        }

        .search-bar {
            flex: 1;
            background: rgba(255, 255, 255, 0.95);
            border: none;
            border-radius: 12px;
            padding: 10px 14px;
            font-size: 1rem;
            color: #333;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
        }

        #closeApps {
            background: #fff;
            border: none;
            cursor: pointer;
            border-radius: 50%;
            width: 35px;
            height: 35px;
            margin-left: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #555;
        }

        #closeApps:hover {
            background: #f3d1d1;
            color: #d33;
        }

        .apptile-group {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin: 0 auto;
            max-width: 600px;
        }

        .apptile-input {
            display: none;
        }

        .apptile-tile {
            display: flex;
            position: relative;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 7rem;
            height: 7rem;
            border-radius: 0.8rem;
            border: 2.5px solid transparent;
            background-color: #fff;
            background-image: linear-gradient(160deg, #ffffff, #f8fafc);
            box-shadow: 0 5px 10px #00000022;
            transition: 0.25s ease;
            cursor: pointer;
        }

        .apptile-group > * {
            margin: 0.7rem;
        }

        .apptile-icon i {
            font-size: 2.3rem;
        }

        .apptile-tile:hover {
            border-color: #00000066;
            transform: translateY(-3px);
        }

        .apptile-label {
            color: #494949;
            transition: 0.4s ease;
            font-weight: 500;
            margin-top: 5px;
        }

        .apptile-input:checked + .apptile-tile {
            border-color: var(--primary-color, #2676ab);
        }
        /* Hover effect — border, icon, and text use --primary-color */
        .apptile-tile:hover {
            border-color: var(--primary-color, #2676ab);
            transform: translateY(-3px);
        }

            .apptile-tile:hover .apptile-icon i,
            .apptile-tile:hover .apptile-label {
                color: var(--primary-color, #2676ab);
            }

        /* Active (clicked/selected) state — border, icon, and text use --primary-color */
        .apptile-input:checked + .apptile-tile {
            border-color: var(--primary-color, #2676ab);
            box-shadow: 0 0 10px var(--primary-color, #2676ab)33;
        }

            .apptile-input:checked + .apptile-tile .apptile-icon i,
            .apptile-input:checked + .apptile-tile .apptile-label {
                color: var(--primary-color, #2676ab);
            }


        /* === Custom Modal === */
        #customModal {
            display: none;
            position: fixed;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background: rgba(0, 0, 0, 0.45);
            justify-content: center;
            align-items: center;
            z-index: 3000;
        }

        #customModal .modal-box {
            background: linear-gradient(145deg, #ffffff, #f3f7ff);
            border-radius: 16px;
            padding: 25px 30px;
            text-align: center;
            max-width: 380px;
            width: 90%;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
            animation: popIn 0.3s ease;
        }

        #customModal h3 {
            color: #d33;
            margin-bottom: 10px;
        }

        #customModal p {
            color: #333;
            font-size: 1rem;
        }

        #closeModalBtn {
            margin-top: 20px;
            background: #2676ab;
            color: #fff;
            border: none;
            border-radius: 8px;
            padding: 8px 16px;
            cursor: pointer;
            font-weight: 500;
        }

        @@keyframes popIn {
            0% { transform: scale(0.8); opacity: 0; }
            100% { transform: scale(1); opacity: 1; }
        }
    </style>
</head>

<body>
    <!-- 🔹 Preloader -->
    <div id="preloader">
        <div class="loader text-center">
            <i class="fas fa-globe logo-icon spin"></i>
            <div class="loading-text">Loading...</div>
        </div>
    </div>

    <!-- 🔹 Custom Modal -->
<div id="customModal">
  <div class="modal-box">
    <h3 id="modalTitle">Title</h3>
    <p id="modalMessage">Message</p>
    <button id="closeModalBtn">OK</button>
  </div>
</div>

    <!-- 🔹 Company Selection -->
    <div id="companyModal">
        <div class="company-select-wrapper">
            <div class="company-select-box">
                <span id="selectedCompanies">Select Company</span>
                <span class="dropdown-arrow">&#9662;</span>
            </div>
            <ul id="companyDropdown" class="company-dropdown"></ul>

            <div class="dropdown-footer">
                <button id="closeButton" class="logout-btn">
                    <i class="fe-log-out"></i> Logout
                </button>
            </div>
        </div>
    </div>

    <!-- 🔹 Application Section -->
    <div id="appSection" style="display:none;" class="text-center w-100 mt-3">
        <div class="search-card">
            <input type="text" id="searchApp" class="form-control search-bar" placeholder="🔍 Search application...">
            <button type="button" id="closeApps" title="Back to Company">&times;</button>
        </div>
        <div id="appGrid" class="apptile-group"></div>
    </div>
</body>
</html>

@section Scripts {
<script>
$(document).ready(function () {
    const userId = '@userId';
    const selected = new Set();

    // === Load Companies ===
    $.getJSON('/Account/GetCompanies', function (companies) {
        $('#companyDropdown').empty();
        $.each(companies, function (i, company) {
            $('#companyDropdown').append(`
                <li data-id="${company.companyID}">
                    <i class="fe-briefcase"></i> ${company.companyName}
                </li>
            `);
        });
    });

    // === Toggle Dropdown ===
    $('.company-select-box').click(function () {
        $('.company-dropdown').slideToggle(180);
        $('.dropdown-arrow').toggleClass('rotate');
    });

    // === Company Selection ===
    $(document).on('click', '#companyDropdown li', function () {
        const companyId = $(this).data('id');
        const name = $(this).text().trim();
        $(this).toggleClass('active');

        if (selected.has(companyId)) selected.delete(companyId);
        else selected.add(companyId);

        const names = Array.from(selected).map(id =>
            $('#companyDropdown li[data-id="' + id + '"]').text().trim()
        );
        $('#selectedCompanies').text(names.length ? names.join(', ') : 'Select Company');

        if (selected.size > 0) {
            const companyId = Array.from(selected)[0];
            $('#preloader').fadeIn(200).find('.loading-text').text('Loading applications...');

            $.getJSON('/Account/GetApplicationsByCompany?companyId=' + companyId)
                .done(function (apps) {
                    $('#appGrid').empty();
                    if (!apps.length) {
                        $('#appGrid').append('<p class="text-center text-muted">No applications found for this company.</p>');
                    } else {
                        const seen = new Set();
                        $.each(apps, function (i, app) {
                            if (!seen.has(app.applicationID)) {
                                seen.add(app.applicationID);
                                const color = app.colorCode || '#2676ab';
                                const icon = app.icon || 'fa-solid fa-cube';
                                const appName = app.applicationName || 'App';
                                $('#appGrid').append(`
                                    <div class="apptile">
                                        <label class="apptile-wrapper">
                                            <input type="checkbox" class="apptile-input" data-app='${JSON.stringify(app)}'>
                                            <span class="apptile-tile" style="--primary-color:${color}">
                                                <span class="apptile-icon"><i class="${icon}"></i></span>
                                                <span class="apptile-label">${appName}</span>
                                            </span>
                                        </label>
                                    </div>
                                `);
                            }
                        });
                    }
                    $('#preloader').fadeOut(300);
                    $('#companyModal').fadeOut(300, function () {
                        $('#appSection').fadeIn(300);
                    });
                });
        }
    });

    // === Close App Section ===
    $('#closeApps').click(function () {
        $('#appSection').fadeOut(200, function () {
            $('#companyModal').fadeIn(300);
            $('#selectedCompanies').text('Select Company');
            $('#companyDropdown').empty();
            $('.dropdown-arrow').removeClass('rotate');
            selected.clear();

            $.getJSON('/Account/GetCompanies', function (companies) {
                $('#companyDropdown').empty();
                $.each(companies, function (i, company) {
                    $('#companyDropdown').append(`
                        <li data-id="${company.companyID}">
                            <i class="fe-briefcase"></i> ${company.companyName}
                        </li>
                    `);
                });
            });
        });
    });

    // === Launch App + Verification + Toast ===
    $(document).on('change', '.apptile-input', function () {
        if (!this.checked) return;
        const app = $(this).data('app');
        const companyId = Array.from(selected)[0];
        const currentHost = window.location.hostname.toLowerCase();
        let urlType = /^[0-9.]+$/.test(currentHost) ? "ipport" : (currentHost === "localhost" ? "local" : "domain");

        const payload = {
            UserID: parseInt('@userId'),
            CompanyID: parseInt(companyId),
            ApplicationID: parseInt(app.applicationID),
            RoleID: parseInt(app.roleID || app.defaultRoleID),
            UrlType: urlType
        };

        // 🔹 Show centered verification loader
        $('#preloader').fadeIn(200).find('.loading-text').text('Verifying application...');

        $.ajax({
            url: '/Account/LaunchApp',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(payload),
            timeout: 10000,
            success: function (response) {
                if (response.success && response.redirectUrl) {
                    // ✅ Check the URL first
                    verifyApplicationUrl(response.redirectUrl);
                } else {
                    $('#preloader').fadeOut(300);
                    showToast('Application not found or unavailable.', 'error');
                }
            },
            error: function (xhr, status) {
                $('#preloader').fadeOut(300);
                let message = "An unexpected error occurred.";
                if (status === "timeout") {
                    message = "Request timed out. Check your internet connection.";
                } else if (xhr.status === 0) {
                    message = "Server not reachable. (Connection refused)";
                } else if (xhr.status >= 500) {
                    message = "Internal server error.";
                }
                showToast(message, 'error');
            }
        });
    });

    // === Verify Application URL ===
    async function verifyApplicationUrl(url) {
        $('#preloader').find('.loading-text').text('Connecting to application...');
        try {
            const check = await fetch(url, { method: 'HEAD', mode: 'no-cors' });
            $('#preloader').fadeOut(200);
            showToast('Application launched successfully!', 'success');
            setTimeout(() => { window.location.href = url; }, 800);
        } catch (err) {
            $('#preloader').fadeOut(200);
            showToast('Failed to connect. The application server is not responding.', 'error');
        }
    }

    // === Compact Toast (Success & Error) ===
    function showToast(message, type = 'error') {
        $('.toast-message').remove(); // remove existing toast

        const bgColor = type === 'success' ? '#16a34a' : '#d33'; // green or red
        const toast = $(`
            <div class="toast-message">${message}</div>
        `).appendTo('body');

        toast.css({
            position: 'fixed',
            top: '25px',
            right: '25px',
            background: bgColor,
            color: '#fff',
            padding: '10px 16px',
            borderRadius: '10px',
            fontSize: '0.9rem',
            fontWeight: '500',
            boxShadow: '0 4px 15px rgba(0,0,0,0.2)',
            zIndex: 5000,
            opacity: 0,
            transform: 'translateY(-10px)',
            transition: 'opacity 0.3s ease, transform 0.3s ease'
        });

        // Animate in
        setTimeout(() => toast.css({ opacity: 1, transform: 'translateY(0)' }), 50);

        // Auto-hide after 2.5 seconds
        setTimeout(() => {
            toast.css({ opacity: 0, transform: 'translateY(-10px)' });
            setTimeout(() => toast.remove(), 400);
        }, 2500);
    }

    // === Search Filter ===
    $(document).on('input', '#searchApp', function () {
        const searchValue = $(this).val().toLowerCase();
        $('#appGrid .apptile-label').each(function () {
            const appName = $(this).text().toLowerCase();
            $(this).closest('.apptile').toggle(appName.includes(searchValue));
        });
    });

    // === Custom Modal Close ===
    $(document).on('click', '#closeModalBtn', function () {
        $('#customModal').fadeOut(200);
    });

    // === Logout ===
    $(document).on('click', '#closeButton', function () {
        logoutUser();
    });

       async function logoutUser() {
        const result = await Swal.fire({
            title: 'Are you sure?',
            text: "Do you want to logout?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#2563eb', // modern blue
            cancelButtonColor: '#ef4444',  // modern red
            confirmButtonText: '<i class="fas fa-sign-out-alt"></i> Yes, logout',
            cancelButtonText: '<i class="fas fa-times"></i> Cancel',
            background: '#f9fafb',
            color: '#111827',
            customClass: {
                popup: 'rounded-2xl shadow-xl p-4',
                title: 'text-xl font-semibold text-gray-900',
                htmlContainer: 'text-gray-600',
                confirmButton: 'rounded-lg px-4 py-2 text-white font-medium shadow hover:shadow-md transition-all',
                cancelButton: 'rounded-lg px-4 py-2 font-medium shadow hover:shadow-md transition-all',
            }
        });

        if (result.isConfirmed) {
            try {
                let response = await fetch('/Account/Logout', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                let data = await response.json();

                if (data.success) {
                    Swal.fire({
                        title: 'Logged out',
                        text: 'You have been successfully logged out.',
                        icon: 'success',
                        timer: 1500,
                        showConfirmButton: false,
                        background: '#f9fafb',
                        color: '#111827',
                        customClass: {
                            popup: 'rounded-2xl shadow-lg p-4',
                            title: 'text-lg font-semibold text-gray-900',
                            htmlContainer: 'text-gray-600',
                        }
                    });
                    setTimeout(() => window.location.href = data.redirectUrl, 1600);
                } else {
                    Swal.fire({
                        title: 'Logout Failed',
                        text: 'Please try again.',
                        icon: 'error',
                        background: '#fef2f2',
                        color: '#7f1d1d',
                        customClass: {
                            popup: 'rounded-2xl shadow-lg p-4',
                            title: 'text-lg font-semibold text-red-700',
                        }
                    });
                }
            } catch (err) {
                Swal.fire({
                    title: 'Error',
                    text: 'An error occurred during logout.',
                    icon: 'error',
                    background: '#fef2f2',
                    color: '#7f1d1d',
                    customClass: {
                        popup: 'rounded-2xl shadow-lg p-4',
                        title: 'text-lg font-semibold text-red-700',
                    }
                });
            }
        }
    }

});
</script>
}

