@using CoreOne.UI.Helper

@model List<CoreOne.DOMAIN.Models.UserAccessViewModel>


@{
    Layout = "_AppLayout";
    ViewData["Title"] = "Select Company & Application";
    var userId = TempData["userId"];
    TempData.Keep("userId");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link href="~/css/companyselection.css" rel="stylesheet" />
</head>

<body>
    <!-- 🔹 Preloader -->
    <div id="preloader">
        <div class="loader text-center">
            <i class="fas fa-globe logo-icon spin"></i>
            <div class="loading-text">Loading...</div>
        </div>
    </div>

    <!-- 🔹 Custom Modal -->
<div id="customModal">
  <div class="modal-box">
    <h3 id="modalTitle">Title</h3>
    <p id="modalMessage">Message</p>
    <button id="closeModalBtn">OK</button>
  </div>
</div>

    <!-- 🔹 Company Selection -->
    <div id="companyModal">
        <div class="company-select-wrapper">
            <div class="company-select-box">
                <span id="selectedCompanies">Select Company</span>
                <span class="dropdown-arrow">&#9662;</span>
            </div>
            <ul id="companyDropdown" class="company-dropdown"></ul>

            <div class="dropdown-footer">
                <button id="closeButton" class="logout-btn">
                    <i class="fe-log-out"></i> Logout
                </button>
            </div>
        </div>
    </div>

    <!-- 🔹 Application Section -->
    <div id="appSection" style="display:none;" class="text-center w-100 mt-3">
        <div class="search-card">
            <input type="text" id="searchApp" class="form-control search-bar" placeholder="🔍 Search application...">
            <button type="button" id="closeApps" title="Back to Company">&times;</button>
        </div>
        <div id="appGrid" class="apptile-group"></div>
    </div>
</body>
</html>
@section Scripts {


    <script>

          const csKey = "@ViewBag.CompanyKey";

            async function validateCompanySelection() {

                try {
                    const url = `/Account/ValidateCompanySelection?cs=${csKey}`;

                    const res = await fetch(url);

                    if (!res.ok) {
                        window.location.href = "/Account/Login";
                        return;
                    }

                    console.log("Company selection valid.");
                }
                catch (err) {
                    console.error("Validation failed:", err);
                    window.location.href = "/Account/Login";
                }
            }

            // Initial check
            validateCompanySelection();

            // Poll every 10 seconds
            setInterval(validateCompanySelection, 30000);





$(document).ready(function () {
    const userId = '@userId';
    const selected = new Set();

    // === Load Companies ===
    $.getJSON('/Account/GetCompanies', function (companies) {
        $('#companyDropdown').empty();
        $.each(companies, function (i, company) {
            $('#companyDropdown').append(`
                <li data-id="${company.companyID}">
                    <i class="fe-briefcase"></i> ${company.companyName}
                </li>
            `);
        });
    });

    // === Toggle Dropdown ===
    $('.company-select-box').click(function () {
        $('.company-dropdown').slideToggle(180);
        $('.dropdown-arrow').toggleClass('rotate');
    });

    // === Company Selection ===
    $(document).on('click', '#companyDropdown li', function () {
        const companyId = $(this).data('id');
        const name = $(this).text().trim();
        $(this).toggleClass('active');

        if (selected.has(companyId)) selected.delete(companyId);
        else selected.add(companyId);

        const names = Array.from(selected).map(id =>
            $('#companyDropdown li[data-id="' + id + '"]').text().trim()
        );
        $('#selectedCompanies').text(names.length ? names.join(', ') : 'Select Company');

        if (selected.size > 0) {
            const companyId = Array.from(selected)[0];
            $('#preloader').fadeIn(200).find('.loading-text').text('Loading applications...');

            $.getJSON('/Account/GetApplicationsByCompany?companyId=' + companyId)
                .done(function (apps) {
                    $('#appGrid').empty();
                    if (!apps.length) {
                        $('#appGrid').append('<p class="text-center text-muted">No applications found for this company.</p>');
                    } else {
                        const seen = new Set();
                        $.each(apps, function (i, app) {
                            if (!seen.has(app.applicationID)) {
                                seen.add(app.applicationID);
                                const color = app.colorCode || '#2676ab';
                                const icon = app.icon || 'fa-solid fa-cube';
                                const appName = app.applicationName || 'App';
                                $('#appGrid').append(`
                                    <div class="apptile">
                                        <label class="apptile-wrapper">
                                            <input type="checkbox" class="apptile-input" data-app='${JSON.stringify(app)}'>
                                            <span class="apptile-tile" style="--primary-color:${color}">
                                                <span class="apptile-icon"><i class="${icon}"></i></span>
                                                <span class="apptile-label">${appName}</span>
                                            </span>
                                        </label>
                                    </div>
                                `);
                            }
                        });
                    }
                    $('#preloader').fadeOut(300);
                    $('#companyModal').fadeOut(300, function () {
                        $('#appSection').fadeIn(300);
                    });
                });
        }
    });

    // === Close App Section ===
    $('#closeApps').click(function () {
        $('#appSection').fadeOut(200, function () {
            $('#companyModal').fadeIn(300);
            $('#selectedCompanies').text('Select Company');
            $('#companyDropdown').empty();
            $('.dropdown-arrow').removeClass('rotate');
            selected.clear();

            $.getJSON('/Account/GetCompanies', function (companies) {
                $('#companyDropdown').empty();
                $.each(companies, function (i, company) {
                    $('#companyDropdown').append(`
                        <li data-id="${company.companyID}">
                            <i class="fe-briefcase"></i> ${company.companyName}
                        </li>
                    `);
                });
            });
        });
    });

    // === Launch App + Verification + Toast ===
    $(document).on('change', '.apptile-input', function () {
        if (!this.checked) return;
        const app = $(this).data('app');
        const companyId = Array.from(selected)[0];
        const currentHost = window.location.hostname.toLowerCase();
        let urlType = /^[0-9.]+$/.test(currentHost) ? "ipport" : (currentHost === "localhost" ? "local" : "domain");

        const payload = {
            UserID: parseInt('@userId'),
            CompanyID: parseInt(companyId),
            ApplicationID: parseInt(app.applicationID),
            RoleID: parseInt(app.roleID || app.defaultRoleID),
            UrlType: urlType
        };

        // 🔹 Show centered verification loader
        $('#preloader').fadeIn(200).find('.loading-text').text('Verifying application...');

        $.ajax({
            url: '/Account/LaunchApp',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(payload),
            timeout: 10000,
            success: function (response) {
                if (response.success && response.redirectUrl) {
                    // ✅ Check the URL first
                    verifyApplicationUrl(response.redirectUrl);
                } else {
                    $('#preloader').fadeOut(300);
                    showToast('Application not found or unavailable.', 'error');
                }
            },
            error: function (xhr, status) {
                $('#preloader').fadeOut(300);
                let message = "An unexpected error occurred.";
                if (status === "timeout") {
                    message = "Request timed out. Check your internet connection.";
                } else if (xhr.status === 0) {
                    message = "Server not reachable. (Connection refused)";
                } else if (xhr.status >= 500) {
                    message = "Internal server error.";
                }
                showToast(message, 'error');
            }
        });
    });

    // === Verify Application URL ===
    async function verifyApplicationUrl(url) {
        $('#preloader').find('.loading-text').text('Connecting to application...');
        try {
            const check = await fetch(url, { method: 'HEAD', mode: 'no-cors' });
            $('#preloader').fadeOut(200);
            showToast('Application launched successfully!', 'success');
                    
            setTimeout(() => { window.location.href = url; }, 800);
        } catch (err) {
            $('#preloader').fadeOut(200);
            showToast('Failed to connect. The application server is not responding.', 'error');
        }
    }

    // === Compact Toast (Success & Error) ===
    function showToast(message, type = 'error') {
        $('.toast-message').remove(); // remove existing toast

        const bgColor = type === 'success' ? '#16a34a' : '#d33'; // green or red
        const toast = $(`
            <div class="toast-message">${message}</div>
        `).appendTo('body');

        toast.css({
            position: 'fixed',
            top: '25px',
            right: '25px',
            background: bgColor,
            color: '#fff',
            padding: '10px 16px',
            borderRadius: '10px',
            fontSize: '0.9rem',
            fontWeight: '500',
            boxShadow: '0 4px 15px rgba(0,0,0,0.2)',
            zIndex: 5000,
            opacity: 0,
            transform: 'translateY(-10px)',
            transition: 'opacity 0.3s ease, transform 0.3s ease'
        });

        // Animate in
        setTimeout(() => toast.css({ opacity: 1, transform: 'translateY(0)' }), 50);

        // Auto-hide after 2.5 seconds
        setTimeout(() => {
            toast.css({ opacity: 0, transform: 'translateY(-10px)' });
            setTimeout(() => toast.remove(), 400);
        }, 2500);
    }

    // === Search Filter ===
    $(document).on('input', '#searchApp', function () {
        const searchValue = $(this).val().toLowerCase();
        $('#appGrid .apptile-label').each(function () {
            const appName = $(this).text().toLowerCase();
            $(this).closest('.apptile').toggle(appName.includes(searchValue));
        });
    });

    // === Custom Modal Close ===
    $(document).on('click', '#closeModalBtn', function () {
        $('#customModal').fadeOut(200);
    });

    // === Logout ===
    $(document).on('click', '#closeButton', function () {
        logoutUser();
    });

       async function logoutUser() {
        const result = await Swal.fire({
            title: 'Are you sure?',
            text: "Do you want to logout?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#2563eb', // modern blue
            cancelButtonColor: '#ef4444',  // modern red
            confirmButtonText: '<i class="fas fa-sign-out-alt"></i> Yes, logout',
            cancelButtonText: '<i class="fas fa-times"></i> Cancel',
            background: '#f9fafb',
            color: '#111827',
            customClass: {
                popup: 'rounded-2xl shadow-xl p-4',
                title: 'text-xl font-semibold text-gray-900',
                htmlContainer: 'text-gray-600',
                confirmButton: 'rounded-lg px-4 py-2 text-white font-medium shadow hover:shadow-md transition-all',
                cancelButton: 'rounded-lg px-4 py-2 font-medium shadow hover:shadow-md transition-all',
            }
        });

        if (result.isConfirmed) {
            try {
                      let response = await fetch('/Account/CompanyLogout', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ csKey: csKey })
                });

                let data = await response.json();

                if (data.success) {
                    Swal.fire({
                        title: 'Logged out',
                        text: 'You have been successfully logged out.',
                        icon: 'success',
                        timer: 1500,
                        showConfirmButton: false,
                        background: '#f9fafb',
                        color: '#111827',
                        customClass: {
                            popup: 'rounded-2xl shadow-lg p-4',
                            title: 'text-lg font-semibold text-gray-900',
                            htmlContainer: 'text-gray-600',
                        }
                    });
                    setTimeout(() => window.location.href = data.redirectUrl, 1600);
                } else {
                    Swal.fire({
                        title: 'Logout Failed',
                        text: 'Please try again.',
                        icon: 'error',
                        background: '#fef2f2',
                        color: '#7f1d1d',
                        customClass: {
                            popup: 'rounded-2xl shadow-lg p-4',
                            title: 'text-lg font-semibold text-red-700',
                        }
                    });
                }
            } catch (err) {
                Swal.fire({
                    title: 'Error',
                    text: 'An error occurred during logout.',
                    icon: 'error',
                    background: '#fef2f2',
                    color: '#7f1d1d',
                    customClass: {
                        popup: 'rounded-2xl shadow-lg p-4',
                        title: 'text-lg font-semibold text-red-700',
                    }
                });
            }
        }
    }

});
</script>
}

